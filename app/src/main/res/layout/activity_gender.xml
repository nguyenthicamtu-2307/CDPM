<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr"
    tools:context=".view.GenderActivity">


    <ImageView
        android:id="@+id/hinhtron"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitStart"
        android:src="@drawable/hinhtron" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="GIỚI TÍNH"
        android:textAlignment="center"
        android:textColor="@color/text_gender"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00000000"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/back_button" />

    <ImageView
        android:id="@+id/female_gender"
        android:layout_centerInParent="true"
        android:layout_width="210dp"
        android:layout_height="244dp"
        android:src="@drawable/female" />

    <ImageView
        android:id="@+id/male_gender"
        android:layout_width="81dp"
        android:layout_height="117dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/female_gender"
        android:alpha="0.5"
        android:src="@drawable/male" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/sticky_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/female_gender"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:ss_animationDuration="600"
        app:ss_animationType="curved"
        app:ss_iconPadding="15dp"
        app:ss_iconSize="40dp"
        app:ss_leftIcon="@drawable/female"
        app:ss_rightIcon="@drawable/male"
        app:ss_sliderBackgroundColor="@color/switch_green"
        app:ss_switchColor="@color/switch_pink"
        app:ss_textVisibility="gone" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buton"
        android:text="Tiếp tục"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
